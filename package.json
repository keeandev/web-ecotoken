{
	"name": "@ecotoken/monorepo",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo build",
		"clean": "run-script-os",
		"clean:windows": "del /f /s node_modules",
		"clean:default": "rm -rf node_modules",
		"clean:workspaces": "turbo clean",
		"db:generate": "dotenv -- turbo db:generate",
		"db:push": "dotenv -- turbo db:push",
		"db:seed": "dotenv -- turbo db:seed",
		"db:studio": "dotenv -- turbo db:studio",
		"dev": "dotenv -- turbo dev --parallel",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"lint": "turbo lint && manypkg check",
		"type-check": "turbo type-check",
		"postinstall": "npm run db:generate && manypkg check",
		"fix-dependencies": "manypkg fix"
	},
	"dependencies": {
		"@ecotoken/eslint-config": "*",
		"@ecotoken/prettier-config": "*",
		"@manypkg/cli": "^0.19.2",
		"dotenv-cli": "^6.0.0",
		"run-script-os": "^1.1.6",
		"turbo": "^1.5.5",
		"typescript": "^4.9.3"
	}
}
