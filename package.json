{
    "name": "@ecotoken/monorepo",
    "private": true,
    "workspaces": [
        "apps/admin",
        "apps/user",
        "apps/workshop",
        "packages/api",
        "packages/auth",
        "packages/config/tailwind",
        "packages/config/prettier",
        "packages/config/eslint",
        "packages/db",
        "packages/ui",
        "packages/email"
    ],
    "scripts": {
        "build": "dotenv -- turbo build",
        "clean": "run-script-os",
        "clean:windows": "del /f /s node_modules",
        "clean:default": "rm -rf node_modules",
        "clean:workspaces": "turbo clean",
        "db:generate": "dotenv -- turbo db:generate",
        "db:push": "dotenv -- turbo db:push",
        "db:seed": "dotenv -- turbo db:seed",
        "db:studio": "dotenv -- turbo db:studio",
        "dev": "dotenv -- turbo dev --parallel --concurrency 11",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
        "lint": "turbo lint && manypkg check",
        "lint:fix": "turbo lint:fix && manypkg fix",
        "type-check": "turbo type-check",
        "prepare": "npm run db:generate"
    },
    "dependencies": {
        "@cosmjs/proto-signing": "^0.28.11",
        "@ecotoken/eslint-config": "^0.0.0",
        "@ecotoken/prettier-config": "^0.0.0",
        "@ecotoken/tailwind-config": "^0.0.0",
        "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
        "@manypkg/cli": "^0.20.0",
        "@metaplex-foundation/js": "^0.18.2",
        "@types/prettier": "^2.7.2",
        "dotenv-cli": "^7.0.0",
        "prettier": "^2.8.4",
        "run-script-os": "^1.1.6",
        "turbo": "^1.8.5",
        "typescript": "^5.0.0"
    },
    "license": "AGPL-3.0-or-later"
}
